{
  "name": "Small Train",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Get the small train schedule of Belgium",
  "default_locale": "en",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/train-icon-small-smals.png",
    "default_popup": "popup.html"
  },
  "background": { 
  	"persistent": false
  	"scripts":[ "lib/sha1.js", "lib/oauth.js", "js/railtime.js", "js/background.js"] 
  }
  "permissions": [
  	"alarms",
  	"storage",
    "http://services.infrabel.be/"
  ],
}